<div class='container'>
  <div class='row'>
    <div class='col-md-3'>
      <h2>User info</h2>
      <%= render 'users/info', user: @user %>
      <h2 class="mt-3">New book</h2>
      <%= render 'form', book: @book %>
    </div>
    <div class='col-md-8 offset-md-1'>
  		<h2>Book detail</h2>
  		<table class='table'>
  		  <tr>
          <td><%= link_to(@book2.user) do %>
            <%= image_tag @book2.user.get_profile_image, size:"100x100" %><br>
            <%= @book2.user.name %>
            <% end %>
          </td>
          <td><%= link_to @book2.title, @book2 %></td>
          <td><%= @book2.body %></td>
          <% if @book2.user == current_user %>
            <td><%= link_to 'Edit', edit_book_path(@book2), class: "btn btn-sm btn-success" %></td>
            <td><%= link_to 'Destroy', @book2, method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-sm btn-danger"%></td>
          <% else %>
          <% end %>
        </tr>
      </table>
    </div>
  </div>
</div>