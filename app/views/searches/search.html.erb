
<% if @range == "User" %>
  <h2>Users search for </h2>

  <table class="table table-hover table-inverse">
    <!--検索対象モデルがUserの時 -->
    <thead>
      <tr>
        <th></th>
        <th>Name</th>
        <th>Introduction</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= image_tag user.get_profile_image, size:'50x50' %></td>
          <td>
            <%= link_to user_path(user.id) do %>
              <%= user.name %></td>
            <% end %>
          <td><%= user.introduction %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <% else %>
    <!--検索対象モデルがUserではない時(= 検索対象モデルがBookの時) -->
    <h2>Books search for </h2>
    <table class="table table-hover table-inverse">
      <thead>
        <tr>
          <th></th>
          <th>Title</th>
          <th>Opinion</th>
          <th colspan="3"></th>
        </tr>
      </thead>
      <tbody>
        <% @books.each do |book| %>
          <tr>
            <td><%= image_tag book.user.get_profile_image, size:'50x50' %></td>
            <td>
              <%= link_to book_path(book.id) do %>
                <%= book.title %></td>
              <% end %>
            <td><%= book.body %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% end %>
